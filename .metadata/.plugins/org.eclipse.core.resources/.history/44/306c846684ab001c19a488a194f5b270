package model.order;

public class Producto extends ItemPedido {

	private Integer aniosGarantia;
	private Double GARANTIA = 0.02;

	public Producto(Integer id, String nombre, Double costoBase, Double iva, Double iibb) {
		super(id, nombre, costoBase, iva, iibb);
	}
	
	public Producto(Integer id, String nombre, Double costoBase, Double iva, Double iibb, Integer aniosGarantia) {
		super(id, nombre, costoBase, iva, iibb);
		this.aniosGarantia = aniosGarantia;
	}

	public Double costoGarantia() {
		return costoFinal * aniosGarantia * GARANTIA;
	}

	@Override
	public Double getCostoFinal() {
		getImpuestos();

		costoFinal = costoBase + impuestos;

		return costoFinal;
	}

}
