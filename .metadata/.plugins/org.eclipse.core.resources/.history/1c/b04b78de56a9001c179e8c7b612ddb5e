package modelo;

public abstract class ItemPedido {
	
	protected Double costoBase;
	protected Double impuestos;
	protected Double costoExtra;
	protected Double costoFinal;
	
	protected Double iva;
	protected Double iibb;
	
	public Double getCostoFinal() {
		getImpuestos();
		getCostoExtra();
		
		costoFinal = costoBase + impuestos + costoExtra;
		
		return costoFinal;
	}
	
	public Double getImpuestos() {
		impuestos = costoBase * (iva + iibb);
		
		return impuestos;
	}
	
	public abstract Double getCostoExtra();

}
