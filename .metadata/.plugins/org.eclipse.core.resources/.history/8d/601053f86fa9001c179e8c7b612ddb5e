package modelo;

public class ItemProducto extends ItemPedido {
	
	private Integer idProducto;
	private String nombre;
	private Integer aniosGarantia;
	private Double GARANTIA = 0.02;
	

	public ItemProducto(Integer idProducto, String nombre, Double costoBase, Double iva, Double iibb, Integer aniosGarantia) {
		this.idProducto = idProducto;
		this.nombre = nombre;
		this.costoBase = costoBase;
		this.iva = iva / 100.0;
		this.iibb = iibb / 100.0;
		this.aniosGarantia = aniosGarantia;
	}
	
	@Override
	public Double getCostoFinal() {
		getImpuestos();
		
		costoFinal = costoBase + impuestos;
		
		return costoFinal;
	}
	
	public Integer getId() {
		return idProducto;
	}	
	
	public Boolean esProducto() {
		return true;
	}

	public Boolean esServicio() {	
		return false;
	}

	@Override
	public Double getCostoExtra() {
		return 0.0;
	}


	
}
