package modelo;

public class ItemServicio extends ItemPedido{
	
	private Boolean especial;
	private Double cargoSoporte;
	
	private Double CARGOSOPORTE = 0.15;
	
	
	public ItemServicio(Integer id, String nombre, Double costoBase, Double iva, Double iibb, Boolean especial,
			Double cargoSoporte) {
		super(id, nombre, costoBase, iva, iibb);
		this.especial = especial;
		this.cargoSoporte = cargoSoporte;
	}
	
	@Override
	public Double getCostoFinal() {
		getImpuestos();
		
		if (especial) cargoSoporte = costoBase * CARGOSOPORTE;
		else cargoSoporte = 0.0;
		
		costoFinal = costoBase + impuestos + cargoSoporte; 
		return costoFinal;
	}
	
	
	public Integer getId() {
		return id;
	}
	
}
