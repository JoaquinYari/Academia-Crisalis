	@Override
	public List<Product> findAll() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Integer insert(Product product) {
		
		try {
			String sql = "INSERT INTO Products (name, costoBase, iva, iibb)"
					+ "VALUES (?, ?, ?, ?)";
			Connection conn = ConnectionProvider.getConnection();
			
			PreparedStatement statement = conn.prepareStatement(sql);
			statement.setString(1, product.getName());
			statement.setDouble(2, product.getBaseCost());
			statement.setDouble(3, product.getIva());
			statement.setDouble(4, product.getIibb());
			
			int rows = statement.executeUpdate();
			
			return rows;
			
		} catch (Exception e) {
			throw new MissingDataException(e);
		}

	}

	@Override
	public Integer update(Product t) {
