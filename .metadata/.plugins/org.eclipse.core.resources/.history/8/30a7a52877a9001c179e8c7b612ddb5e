package modelo;

import modelo.cliente.Cliente;
import modelo.cliente.Persona;

public class Sistema {
	
	public static void main(String[] args) {
		
		Cliente c1 = new Persona("Gonzalez", "Joaquin", 123);
		
		ItemProducto p0 = new ItemProducto("p0", 500.0, 21.0, 3.5, 0);
		ItemProducto p1 = new ItemProducto("p1", 700.0, 21.0, 3.5, 0);
		ItemProducto p2 = new ItemProducto("p2", 1200.0, 21.0, 3.5, 2);
		
		ItemServicio s0 = new ItemServicio("s0", 2100.0, 21.0, 3.5, true);
		ItemServicio s1 = new ItemServicio("s1", 4500.0, 21.0, 3.5, false);
		ItemServicio s2 = new ItemServicio("s2", 1800.0, 21.0, 3.5, false);
		
		Pedido pedido0 = new Pedido(01, c1);
		
		pedido0.agregarItem(p0);
		pedido0.agregarItem(p1);
		pedido0.agregarItem(p2);
		pedido0.agregarItem(s0);
		pedido0.agregarItem(s1);
		pedido0.agregarItem(s2);
		
	
		
		System.out.println(pedido0.getItems());
		
		pedido0.cerrarPedido();
		
		System.out.println(pedido0.getItems());
	
		System.out.println(pedido0);
		
		pedido0.cancelarPedido();
		
		System.out.println(pedido0);
		
	}

}
