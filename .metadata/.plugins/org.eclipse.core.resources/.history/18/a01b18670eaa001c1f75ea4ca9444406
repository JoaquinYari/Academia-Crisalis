package modelo;

import modelo.cliente.Cliente;
import modelo.cliente.Empresa;
import modelo.pedido.ItemProducto;
import modelo.pedido.ItemServicio;
import modelo.pedido.Pedido;

public class Sistema {
	
	public static void main(String[] args) {
		
		Cliente c1 = new Empresa("Nana", 222222, "15/05/2014", "Gonzalez", "Joaquin", 123);
		
		ItemProducto p0 = new ItemProducto(0, "p0", 500.0, 21.0, 3.5, 0);
		ItemProducto p1 = new ItemProducto(1, "p1", 700.0, 21.0, 3.5, 0);
		ItemProducto p2 = new ItemProducto(2, "p2", 1200.0, 21.0, 3.5, 2);
		
		ItemServicio s0 = new ItemServicio(0, "s0", 2100.0, 21.0, 3.5, true);
		ItemServicio s1 = new ItemServicio(1, "s1", 4500.0, 21.0, 3.5, false);
		ItemServicio s2 = new ItemServicio(2, "s2", 1800.0, 21.0, 3.5, false);
		
		Pedido pedido0 = new Pedido(01, c1);
		
		pedido0.agregarItem(p0, 1);
		pedido0.agregarItem(p1, 2);
		pedido0.agregarItem(p2, 1);
		pedido0.agregarItem(s0, 1);
		pedido0.agregarItem(s1, 3);
		pedido0.agregarItem(s2, 1);
		
	
		
		System.out.println(pedido0.getItems());
		
		pedido0.cerrarPedido();
		
		System.out.println(pedido0.getItems());
	
		System.out.println(pedido0);
		
		pedido0.cancelarPedido();
		
		System.out.println(pedido0);
		
	}

}
